<Window x:Class="TelephoneCompanyApp.View.NoResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelephoneCompanyApp.View"
        mc:Ignorable="d"
        Title="Результаты поиска" Height="100" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
           Text="Нет абонентов, удовлетворяющих критерию поиска"  
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           TextWrapping="Wrap"/>
        <Button Grid.Row="1" Content="OK" Margin="0,10,0,0"/>
    </Grid>
</Window>
